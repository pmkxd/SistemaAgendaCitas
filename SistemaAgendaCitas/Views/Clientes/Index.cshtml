@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<SistemaAgendaCitas.Models.Entities.Cliente>
@{
    ViewData["Title"] = "Clientes";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h1>Clientes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-orden="@ViewData["OrdenPorNombre"]">Nombre</a>
            </th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>
                <a asp-action="Index" asp-route-orden="@ViewData["OrdenPorFecha"]">Fecha de Registro</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.FechaRegistro.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, orden = ViewData["OrdenActual"] }))
