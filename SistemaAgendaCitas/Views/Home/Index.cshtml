@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center my-5">
    <h1 class="display-4 mb-3">
        <i class="bi bi-calendar-check"></i> Bienvenido al Sistema de Agenda de Citas
    </h1>
    <p class="lead">
        Esta aplicación te permite gestionar <strong>Clientes</strong>, <strong>Servicios</strong> y <strong>Citas</strong> de forma sencilla y eficiente.
    </p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-lines-fill"></i> Clientes</h5>
                    <p class="card-text">Visualiza, registra y administra tus clientes.</p>
                    <a class="btn btn-sm btn-primary" asp-controller="Clientes" asp-action="Index">Ir a Clientes</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-gear-fill"></i> Servicios</h5>
                    <p class="card-text">Gestiona los servicios disponibles y su disponibilidad.</p>
                    <a class="btn btn-sm btn-primary" asp-controller="Servicios" asp-action="Index">Ir a Servicios</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-calendar-event"></i> Citas</h5>
                    <p class="card-text">Agenda, edita y administra citas para tus clientes.</p>
                    <a class="btn btn-sm btn-primary" asp-controller="Citas" asp-action="Index">Ir a Citas</a>
                </div>
            </div>
        </div>
    </div>
</div>