@model SistemaAgendaCitas.Models.ViewModels.ReporteCitasYServiciosViewModel

@{
    ViewData["Title"] = "Reportes";
}

<h2>Reportes</h2>

<form asp-action="Reportes" method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Desde:</label>
            <input type="date" name="fechaInicio" class="form-control"
                   value="@Model.FechaInicio.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group col-md-3">
            <label>Hasta:</label>
            <input type="date" name="fechaFin" class="form-control"
                   value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

@if (Model.FechaInicio != DateTime.MinValue && Model.FechaFin != DateTime.MinValue)
{
    <h4>Totales por Estado</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Estado</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr><td>Pendientes</td><td>@Model.Pendientes</td></tr>
            <tr><td>Confirmadas</td><td>@Model.Confirmadas</td></tr>
            <tr><td>Completadas</td><td>@Model.Completadas</td></tr>
            <tr><td>Canceladas</td><td>@Model.Canceladas</td></tr>
        </tbody>
    </table>

    <h4 class="mt-4">Servicios más Solicitados</h4>
    @if (Model.EstadisticasServicios.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Servicio</th>
                    <th>Cantidad de Citas</th>
                    <th>Ingreso Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EstadisticasServicios)
                {
                    <tr>
                        <td>@item.NombreServicio</td>
                        <td>@item.CantidadCitas</td>
                        <td>$@item.IngresoTotal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay citas registradas en este período.</p>
    }
}
