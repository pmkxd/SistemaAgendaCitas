@model IEnumerable<SistemaAgendaCitas.Models.Entities.Cita>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}



<h1>Gestión de Citas</h1>
<p>
    <a asp-action="Calendario" class="btn btn-sm btn-warning">Ver vista Calendario</a>
</p>
<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Agregar nueva cita</a>
</p>
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label>Fecha:</label>
                    <input type="date" name="fecha" class="form-control" value="@(Context.Request.Query["fecha"])" />
                </div>
                <div class="col-md-3">
                    <label>Cliente:</label>
                    <select name="clienteId" class="form-control" asp-items="ViewBag.Clientes">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label>Estado:</label>
                    <select name="estado" class="form-control" asp-items="ViewBag.Estados">
                        <option value="">-- Todos --</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </form>
        </div>
    </div>



<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cliente)</th>
            <th>@Html.DisplayNameFor(model => model.Servicio)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.Hora)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Comentarios)</th>
            <th>Último Cambio Estado</th>
            <th>Cambiar Estado</th> 
            <th>Acciones</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cliente.Nombre @item.Cliente.Apellido</td>
                <td>@item.Servicio.Nombre</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Hora</td>
                <td>@item.Estado</td>
                <td>@item.Comentarios</td>
                <td>@item.FechaCambioEstado?.ToString("g")</td>

  <!-- Columna: Cambiar Estado -->
<td>
    @if (item.Estado == EstadoCita.Pendiente)
    {
        <!-- Confirmar -->
        <form asp-action="CambiarEstadoRapido" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@item.Id" />
            <input type="hidden" name="nuevoEstado" value="@((int)EstadoCita.Confirmada)" />
            <button type="submit" class="btn btn-sm btn-warning" title="Confirmar cita">
                <i class="bi bi-check2-square"></i>
            </button>
        </form>

        <!-- Completar -->
        <form asp-action="CambiarEstadoRapido" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@item.Id" />
            <input type="hidden" name="nuevoEstado" value="@((int)EstadoCita.Completada)" />
            <button type="submit" class="btn btn-sm btn-success" title="Completar cita">
                <i class="bi bi-check-circle"></i>
            </button>
        </form>

        <!-- Cancelar -->
        <form asp-action="CambiarEstadoRapido" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@item.Id" />
            <input type="hidden" name="nuevoEstado" value="@((int)EstadoCita.Cancelada)" />
            <button type="submit" class="btn btn-sm btn-secondary" title="Cancelar cita">
                <i class="bi bi-x-circle"></i>
            </button>
        </form>
    }
    else if (item.Estado == EstadoCita.Confirmada)
    {
        <!-- Completar -->
        <form asp-action="CambiarEstadoRapido" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@item.Id" />
            <input type="hidden" name="nuevoEstado" value="@((int)EstadoCita.Completada)" />
            <button type="submit" class="btn btn-sm btn-success" title="Completar cita">
                <i class="bi bi-check-circle"></i>
            </button>
        </form>

        <!-- Cancelar -->
        <form asp-action="CambiarEstadoRapido" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@item.Id" />
            <input type="hidden" name="nuevoEstado" value="@((int)EstadoCita.Cancelada)" />
            <button type="submit" class="btn btn-sm btn-secondary" title="Cancelar cita">
                <i class="bi bi-x-circle"></i>
            </button>
        </form>
    }
</td>

<!-- Columna: Acciones -->
<td>
    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalles</a>
    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
</td>


            </tr>
        }
    </tbody>
</table>

